    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${config:arm.build.target}",
            "cwd": ".",
            "MIMode": "gdb",
            "miDebuggerPath": "arm",
            "miDebuggerServerAddress": "openocd:3333",
            "sourceFileMap": { "/app" : "${workspaceFolder}" }
        }
    ]
}